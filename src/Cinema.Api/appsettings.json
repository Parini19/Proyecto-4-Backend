{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cinema-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5173",
      "http://localhost:5500",
      "http://127.0.0.1:5500"
    ]
  },
  "Firebase": {
    "ConfigPath": "Config/magiacinema-adminsdk.json",
    "apiKey": ""
  },
  "Jwt": {
    "Key": "",
    "Issuer": "CinemaApi",
    "Audience": "CinemaApiUsers",
    "ExpiresMinutes": 60
  },
  "FeatureManagement": {
    "DatabaseConnection": true,
    "DatabaseReadAll": true
  }
}
